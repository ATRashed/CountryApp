<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountryApp.NewCountryPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="New Country" FontSize="Large"/>

            <Entry x:Name="countryEntry"
                   Placeholder="Write country name"/>

            <Entry x:Name="countryCode"
                   Placeholder="Write country code"/>

            <Entry x:Name="countryLanguage"
                   Placeholder="Write language"/>

            <Entry x:Name="countrycurrency"
                   Placeholder="Write currency name"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>